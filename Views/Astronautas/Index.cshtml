@model IEnumerable<AppWeb_Astro.Models.Astronauta>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Astronautas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nuevo</a>
</p>

<form asp-controller="Astronautas" asp-action="Index" method="get">
<p>

    Buscar nacionalidad: <input type="text" name="buscar" class="form-text" />
    <input type="submit" value="Buscar" class="btn-sm btn-dark" />
</p>
<p>
    Buscar activo: <input type="text" name="ACB" class="form-text" />
    <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
</p>

</form>





<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagenUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Redes)
            </th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {

         <tr>
            <td>
                <img src="@item.ImagenUrl" alt="" class="avatar">
            </td>
        
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
           <td>
               @Html.DisplayFor(modelItem => item.Redes)
           </td>
            <td>
                <a asp-action="Edit" class= "btn btn-warning"asp-route-id="@item.Id">Editar</a> 
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalles</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>   
}
    </tbody>
</table>
<style>
.avatar {
    vertical-align:middle;
    width: 50px;
    height:50px;
    border-radius:50%;

}

</style>


